@model List<PoralAARB.Models.Department>
@{
    ViewBag.Title = "DepartmentList";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row col-7">
            <button class="text-black btn-md float-right">
                <ol class="breadcrumb float-sm-right">
                    <li> @Html.ActionLink("Create New Department", "Departments")</li>
                </ol>
            </button>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">List of Departments</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Department Code</th>
                                    <th>Department Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.DepartmentId</td>
                                    <td>@item.DepartmentName</td>
                                    <td>
                                        <a href="@Url.Action("Departments",new {item.Id, item.DepartmentId, item.DepartmentName})"><i class="text-warning">Edit</i></a>
                                        <a href="@Url.Action("Delete",new { id=@item.Id})"><i class="text-danger">Delete</i></a>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section scripts{
    <script>
        
       $(document).ready(function () {
     $("#example1").DataTable({
    dom: 'Bfrtip',
    "paging": true,
      ng: false,
        "lengthChange": false,
        "searching": true,
        "ordering": true,
        "info": true,
        "autoWidth": false,
        "responsive": true,
        "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
    }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

            })
    </script>
    }

